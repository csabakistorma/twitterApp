<%- include('header') %>
<%- include('navbar') %>

<div class="container">
    <div class="my-form px-3 py-5">
        <div class="logo-container">
            <i class="bi bi-twitter"></i>
        </div>
        <h2 class="text-center mb-5">Forgot password</h2>

        <% if (typeof error !== 'undefined') { %>
        <div class="alert alert-danger" role="alert">
            <%= error %>
        </div>
        <% } %>

        <form method="POST" action="/forgotpw" autocomplete="off">
            <p class="mx-3 my-4">Provide the email address associated with your account to recover your password</p>
            <div class="input-group flex-nowrap">
                <span class="input-group-text" id="addon-wrapping"><i class="bi bi-at"></i></span>
                <input type="email" name="email" class="form-control custom-input" placeholder="Email address" aria-label="Email address"
                    aria-describedby="addon-wrapping" required>
            </div>
            <button type="submit" class="btn my-btn mt-5 px-5">Continue</button>
        </form>
    </div>
</div>


<%- include('footer') %>